<configuration scan="true" scanPeriod="6 seconds">
  <timestamp key="byDate" datePattern="yyyyMMdd"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="home.logback.MDCManipulatingFilter">
      <level>INFO</level>
    </filter>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%X{sourceThread}] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
    <discriminator>
      <key>akkaSource</key>
      <defaultValue>noAkkaSource</defaultValue>
    </discriminator>
    <sift>
      <appender name="FILE-${akkaSource}" class="ch.qos.logback.core.FileAppender">
        <filter class="home.logback.MDCManipulatingFilter">
          <level>DEBUG</level>
        </filter>
        <file>/dev/shm/${byDate}/${akkaSource}.log</file>
        <append>false</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
          <!--<pattern>%X{akkaTimestamp} %d{HH:mm:ss.SSS} [%X{sourceThread}] %logger{36} %-5level %mdc - %msg%n</pattern>-->
          <pattern>%X{akkaTimestamp} %d{HH:mm:ss.SSS} [%X{sourceThread}] %-5level - %msg%n</pattern>
        </layout>
      </appender>
    </sift>
  </appender>

  <logger name="home" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="SIFT"/>
  </root>
</configuration>